<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_move_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@drawable/now_user_move_guide_bg"
        android:drawableLeft="@mipmap/icon_horn"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/icon_close"
        android:ellipsize="marquee"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/now_user_move_guide_content"
        android:textColor="#FFFFFF">

        <requestFocus />
    </TextView>

</LinearLayout>